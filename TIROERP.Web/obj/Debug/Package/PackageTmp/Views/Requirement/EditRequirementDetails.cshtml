            var rowId = $(this).attr("data-languageId");
            var lang = $.grep(languageIdsArr, function (e) { return e != rowId; });
            $('#hdnLanguageIds').val(lang.join('|'));
            $(this).parent().parent().remove();
            e.preventDefault();
        });

    });
</script>



