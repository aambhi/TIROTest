@model TIROERP.Core.Model.State
@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@Scripts.Render("~/bundles/chosen")
<link href="~/Content/css/chosen/chosen.css" rel="stylesheet" />

<script type="text/javascript">
    $(document).ready(function () {
        $("#COUNTRY_CODE").chosen();
    });
</script>
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="right_col" role="main">
        <div class="">
            <div class="page-title">
                <div class="title_left">
                    <h3>State Master </h3>
                </div>
            </div>
            <div class="clearfix"></div>
            @Html.ValidationSummary(false, "", new { @class = "text-danger" })


            <div class="row">
                <div class="col-md-12 col-sm-12 col-xs-12">
                    <div class="x_panel">
                        <div class="x_title">
                            <h2>Add </h2>
                            <ul class="nav navbar-right panel_toolbox" style="min-width: 0px;">
                                <li><a class="collapse-link"><i class="fa fa-chevron-up"></i></a></li>
                            </ul>
                            <div class="clearfix"></div>
                        </div>
                        <div class="x_content">
                            <form class="form-inline">
                                @*<div class="col-md-10">
                                    <label for="middle-name" class="control-label col-md-3">State Code </label>
                                    <div class="col-md-6 col-sm-6">
                                        @Html.TextBoxFor(model => model.STATE_CODE, new { @id = "STATE_CODE", @class = "form-control  col-md-3", @autocomplete = "off", @maxlength = "50" })
                                        @Html.ValidationMessageFor(model => model.STATE_CODE, "", new { @class = "text-danger" })
                                    </div>
                                </div>*@

                                <div class="col-md-10" style="margin-top:10px;">
                                    <label for="middle-name" class="control-label col-md-3 col-xs-3">State Name <span class="required">*</span></label>
                                    <div class="col-md-6 col-sm-6">
                                        @Html.TextBoxFor(model => model.STATE_NAME, new { @id = "STATE_NAME", @class = "form-control  col-md-3", @autocomplete = "off", @maxlength = "50" })
                                        @Html.ValidationMessageFor(model => model.STATE_NAME, "", new { @class = "text-danger" })
                                    </div>
                                </div>

                                <div class="col-md-10" style="margin-top:10px;">
                                    <label for="middle-name" class="control-label col-md-3 col-xs-3">Country Name <span class="required">*</span></label>
                                    <div class="col-md-6 col-sm-6">
                                        @Html.DropDownListFor(model => model.COUNTRY_CODE, ViewData["GetCountry"] as IEnumerable<SelectListItem>,"", new { @id = "COUNTRY_CODE", @class = "form-control  col-md-3", @data_placeholder = "Select Country" })
                                        @Html.ValidationMessageFor(model => model.COUNTRY_CODE, "", new { @class = "text-danger" })
                                    </div>
                                </div>

                                <div class="col-md-10" style="margin-top:10px;">
                                    <div class="col-md-6 col-sm-6 col-xs-12 col-md-offset-3">
                                        <button type="submit" class="btn btn-success">Submit</button> | @Html.ActionLink("Back to List", "Index")
                                    </div>
                                </div>
                                @Html.HiddenFor(model => model.StateId)
                            </form>
                        </div>

                    </div>

                </div>
            </div>
        </div>
    </div>

}

