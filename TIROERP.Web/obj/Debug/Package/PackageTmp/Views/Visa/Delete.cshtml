@model TIROERP.Core.Model.Visa
@{
    ViewBag.Title = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using (Html.BeginForm("Delete", "Visa", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @id = "formControl", @class = "form-horizontal", enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()

    <div class="right_col" role="main">
        <div class="">
            <div class="page-title">
                <div class="title_left">
                    <h3>Visa</h3>
                </div>
            </div>
            <div class="clearfix"></div>


            <div class="row">
                <div class="col-md-12 col-sm-12 col-xs-12">
                    <div class="x_panel">
                        <div class="x_title">
                            <h2>Delete </h2>
                            <ul class="nav navbar-right panel_toolbox" style="min-width: 0px;">
                                <li><a class="collapse-link"><i class="fa fa-chevron-up"></i></a></li>
                            </ul>
                            <div class="clearfix"></div>
                        </div>
                        <div class="x_content">
                            <form class="form-inline">

                                <div class="col-md-10">
                                    <label for="middle-name" class="control-label col-md-3 col-sm-3">Client Name </label>
                                    <div class="col-md-6 col-sm-6" style="margin-top: 7px;">
                                        @Html.DisplayFor(model => model.CLIENT_NAME, new { @id = "CLIENT_NAME", @class = "form-control  col-md-7 col-xs-12", @autocomplete = "off", @maxlength = "100" })
                                    </div>
                                </div>

                                <div class="col-md-10">
                                    <label for="middle-name" class="control-label col-md-3 col-sm-3">Visa Number </label>
                                    <div class="col-md-6 col-sm-6" style="margin-top: 7px;">
                                        @Html.DisplayFor(model => model.VISA_NUMBER, new { @id = "VISA_NUMBER", @class = "form-control  col-md-7 col-xs-12", @autocomplete = "off", @maxlength = "100" })
                                    </div>
                                </div>

                                <div class="col-md-10">
                                    <label for="middle-name" class="control-label col-md-3 col-sm-3">Purpose</label>
                                    <div class="col-md-6 col-sm-6"  style="margin-top: 7px;">
                                        @Html.DisplayFor(model => model.PURPOSE, new { @id = "PURPOSE", @class = "form-control  col-md-7 col-xs-12", @autocomplete = "off", @maxlength = "100" })
                                    </div>
                                </div>

                                <div class="col-md-10">
                                    <label for="middle-name" class="control-label col-md-3 col-sm-3">Issue Date </label>
                                    <div class="col-md-6 col-sm-6" style="margin-top: 7px;">
                                        @Model.INDIAN_FORMAT_ISSUE_DATE.ToString("dd/MM/yyyy")
                                    </div>
                                </div>

                                <div class="col-md-10">
                                    <label for="middle-name" class="control-label col-md-3 col-sm-3">Expiry Date</label>
                                    <div class="col-md-6 col-sm-6" style="margin-top: 7px;">
                                        @Model.INDIAN_FORMAT_EXPIRY_DATE.ToString("dd/MM/yyyy")

                                    </div>
                                </div>

                                <div class="col-md-10">
                                    <label for="middle-name" class="control-label col-md-3 col-sm-3">Received On</label>
                                    <div class="col-md-6 col-sm-6" style="margin-top: 7px;">
                                        @Convert.ToDateTime(Model.RECIEVED_DATE).ToString("dd/MM/yyyy")
                                    </div>
                                </div>
                                <div class="col-md-10" style="margin-top:10px;">
                                    <div class="col-md-6 col-sm-6 col-xs-12 col-md-offset-3">
                                        <button type="submit" class="btn btn-success">Delete</button>
                                        | @Html.ActionLink("Back to List", "Index")
                                    </div>
                                </div>
                                @Html.HiddenFor(model => model.VISA_ID)
                            </form>
                            <br />
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
}