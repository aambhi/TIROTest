<script type="text/javascript">
    $(document).ready(function () {

        var isecr = '@Model.IS_ECR';

        if (isecr == 'True') {
            $("#ECR").prop('checked', true);
            $("#lblECR").attr("class", "btn btn-default active")
            $("#lblECNR").attr("class", "btn btn-default")
            $("#divECR").css("display", "block");
        }
        else {
            $("#ECNR").prop('checked', true);
            $("#lblECNR").attr("class", "btn btn-default active")
            $("#lblECR").attr("class", "btn btn-default")
            $("#divECR").css("display", "none");
        }


        $("#DM_DATE").datepicker({
            dateFormat: "dd/mm/yy",
            changeMonth: true,
            changeYear: true, yearRange: "-70:+10",
        });

        $("#POLICY_DATE").datepicker({
            dateFormat: "dd/mm/yy",
            changeMonth: true,
            changeYear: true, yearRange: "-70:+10",
        });

        $("#SUBMISSION_DATE").datepicker({
            dateFormat: "dd/mm/yy",
            changeMonth: true,
            changeYear: true, yearRange: "-70:+10",
        });

        $("#USER_REQUIREMENT_ID").change(function (e) {
            $("#CandidateName").empty();
            $.ajax({
                type: 'POST',
                url: '@Url.Action("GetCandidateName","Emigration")', // we are calling json method
                data: { userRequirementId: $("#USER_REQUIREMENT_ID").val() },
                success: function (d) {
                    $("#CandidateName").val(d);
                },
                error: function (ex) {
                    $("#CandidateName").empty();
                }
            });
            return false;
        });

        $(".emigrationstatus").change(function () {
            var IS_EECNR = $('input[name=emigrationstatus]:checked').val();
            if (IS_EECNR == "false") {
                $("#FE_NO").val("");
                $("#PT_NO").val("");
                $("#DM_NO").val("");
                $("#DM_DATE").val("");
                $("#POLICY_NO").val("");
                $("#POLICY_DATE").val("");
                $("#POLICY_AMOUNT").val("");
                $("#POLICY_COMPANYNAME").val("");

                $(".policyfileGroup").hide();
                $(".policyfileadd").show();
                $("#POLICY_ATTACHMENT").val('');

                $("#SUBMISSION_DATE").val("");
                $("#EMIGRATION_CLEARANCENO").val("");

                $(".emigrationfileGroup").hide();
                $(".emigrationfileadd").show();
                $("#EMIGRATION_ATTACHMENT").val('');

                $("#POE").val("");
                $("#divECR").css("display", "none");
            }
            else {
                $("#divECR").css("display", "block");
            }
        });

        $("#SaveEmigration").click(function (e) {
            var isStepValid = true;

            var USER_REQUIREMENT_ID = $("#USER_REQUIREMENT_ID").val();
            if (USER_REQUIREMENT_ID == "") {
                $("#Err_USER_REQUIREMENT_ID").text("Please select Passport No.");
                isStepValid = false;
            }
            else {
                $("#Err_USER_REQUIREMENT_ID").text("");
            }

            var isECR = $('input[name=emigrationstatus]:checked').val();
            $("#IS_ECR").val(isECR);

            if (isECR == "true") {

                var dmno = $("#DM_NO").val();
                if (dmno == "") {
                    $("#Err_DM_NO").text("Please enter DM No.");
                    isStepValid = false;
                }
                else {
                    $("#Err_DM_NO").text("");
                }

                var dmdate = $("#DM_DATE").val();
                if (dmdate == "") {
                    $("#Err_DM_DATE").text("Please enter DM Date");
                    isStepValid = false;
                }
                else {
                    $("#Err_DM_DATE").text("");
                }

                var policyno = $("#POLICY_NO").val();
                if (policyno == "") {
                    $("#Err_POLICY_NO").text("Please enter Policy No");
                    isStepValid = false;
                }
                else {
                    $("#Err_POLICY_NO").text("");
                }

                var policydate = $("#POLICY_DATE").val();
                if (policydate == "") {
                    $("#Err_POLICY_DATE").text("Please enter Policy Date");
                    isStepValid = false;
                }
                else {
                    $("#Err_POLICY_DATE").text("");
                }

                var policyamt = $("#POLICY_AMOUNT").val();
                if (policyamt == "") {
                    $("#Err_POLICY_AMOUNT").text("Please enter Policy Amount");
                    isStepValid = false;
                }
                else {
                    $("#Err_POLICY_AMOUNT").text("");
                }

                var policycompname = $("#POLICY_COMPANYNAME").val();
                if (policycompname == "") {
                    $("#Err_POLICY_COMPANYNAME").text("Please enter Policy Company Name");
                    isStepValid = false;
                }
                else {
                    $("#Err_POLICY_COMPANYNAME").text("");
                }

                var SUBMISSION_DATE = $("#SUBMISSION_DATE").val();
                if (SUBMISSION_DATE == "") {
                    $("#Err_SUBMISSION_DATE").text("Please enter Submission Date");
                    isStepValid = false;
                }
                else {
                    $("#Err_SUBMISSION_DATE").text("");
                }

                var EMIGRATION_CLEARANCENO = $("#EMIGRATION_CLEARANCENO").val();
                if (EMIGRATION_CLEARANCENO == "") {
                    $("#Err_EMIGRATION_CLEARANCENO").text("Please enter Emigration Clearance No");
                    isStepValid = false;
                }
                else {
                    $("#Err_EMIGRATION_CLEARANCENO").text("");
                }

                var POE = $("#POE").val();
                if (POE == "") {
                    $("#Err_POE").text("Please enter POE");
                    isStepValid = false;
                }
                else {
                    $("#Err_POE").text("");
                }
            }

            return isStepValid;

        });

        $(document).on("click", ".policyremoveFile", function () {
            $(this).parent().remove();
            $(".policyfileGroup").hide();
            $(".policyfileadd").show();
            $("#POLICY_ATTACHMENT").val('');
        });

        var file = '@policyName';
        if (file == null || file == "") {
            $(".policyfileadd").show();
        }


        $(document).on("click", ".emigrationremoveFile", function () {
            $(this).parent().remove();
            $(".emigrationfileGroup").hide();
            $(".emigrationfileadd").show();
            $("#EMIGRATION_ATTACHMENT").val('');
        });

        var file = '@emigrationName';
        if (file == null || file == "") {
            $(".emigrationfileadd").show();
        }
    });
</script>

