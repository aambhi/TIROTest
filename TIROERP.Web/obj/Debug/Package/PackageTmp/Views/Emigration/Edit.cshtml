@model TIROERP.Core.Model.Emigration
@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
    string policyName = string.Empty;
    string policyfilepath = string.Empty;
    string policyReportPath = string.Empty;

    string emigrationName = string.Empty;
    string emigrationfilepath = string.Empty;
    string emigrationReportPath = string.Empty;

    if (Model != null)
    {
        if (!string.IsNullOrEmpty(Model.POLICY_ATTACHMENT))
        {
            policyReportPath = Model.POLICY_ATTACHMENT;
            policyName = Model.POLICY_ATTACHMENT.Substring(15);
            policyfilepath = Url.Content(Server.MapPath("~/Uploads/EmigrationUploadedFiles/" + Model.POLICY_ATTACHMENT));
        }
        if (!string.IsNullOrEmpty(Model.EMIGRATION_ATTACHMENT))
        {
            emigrationReportPath = Model.EMIGRATION_ATTACHMENT;
            emigrationName = Model.EMIGRATION_ATTACHMENT.Substring(15);
            emigrationfilepath = Url.Content(Server.MapPath("~/Uploads/EmigrationUploadedFiles/" + Model.EMIGRATION_ATTACHMENT));
        }
    }
}
