@model TIROERP.Core.Model.City
@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@Scripts.Render("~/bundles/chosen")
<link href="~/Content/css/chosen/chosen.css" rel="stylesheet" />
<script type="text/javascript">
    $(document).ready(function () {
        $("#STATE_CODE").chosen();
    });
</script>
@using (Html.BeginForm())
{
    <div class="right_col" role="main">
        <div class="">
            <div class="page-title">
                <div class="title_left">
                    <h3>City Master </h3>
                </div>
            </div>
            <div class="clearfix"></div>
            @Html.ValidationSummary(false, "", new { @class = "text-danger" })

            <div class="row">
                <div class="col-md-12 col-sm-12 col-xs-12">
                    <div class="x_panel">
                        <div class="x_title">
                            <h2>Edit </h2>
                            <ul class="nav navbar-right panel_toolbox" style="min-width: 0px;">
                                <li><a class="collapse-link"><i class="fa fa-chevron-up"></i></a></li>
                            </ul>
                            <div class="clearfix"></div>
                        </div>
                        <div class="x_content">
                            <form class="form-inline">

                                @*<div class="col-md-10">
                                    <label for="middle-name" class="control-label col-md-3 col-sm-3">City Code </label>
                                    <div class="col-md-6 col-sm-6">
                                        @Html.TextBoxFor(model => model.CITY_CODE, new { @id = "CITY_CODE", @class = "form-control  col-md-3", @autocomplete = "off", @maxlength = "20" })
                                        @Html.ValidationMessageFor(model => model.CITY_CODE, "", new { @class = "text-danger" })
                                    </div>
                                </div>*@
                                <div class="col-md-10" style="margin-top:10px;">
                                    <label for="middle-name" class="control-label col-md-3 col-sm-3"> Country Name <span class="required">*</span></label>
                                    <div class="col-md-6 col-sm-6">
                                        @Html.TextBoxFor(model => model.CITY_NAME, new { @id = "CITY_NAME", @class = "form-control  col-md-3", @autocomplete = "off", @maxlength = "50" })
                                        @Html.ValidationMessageFor(model => model.CITY_NAME, "", new { @class = "text-danger" })
                                    </div>
                                </div>
                                <div class="col-md-10" style="margin-top:10px;">
                                    <label for="middle-name" class="control-label col-md-3 col-sm-3"> State Name <span class="required">*</span></label>
                                    <div class="col-md-6 col-sm-6">
                                        @Html.DropDownListFor(model => model.STATE_CODE, ViewData["GetStates"] as IEnumerable<SelectListItem>, new { @id = "STATE_CODE", @class = "form-control  col-md-3", @data_placeholder = "Select State" })
                                        @Html.ValidationMessageFor(model => model.STATE_CODE, "", new { @class = "text-danger" })
                                    </div>
                                </div>
                                <div class="col-md-10" style="margin-top:10px;">
                                    <div class="col-md-6 col-sm-6 col-xs-12 col-md-offset-3">
                                        <button type="submit" class="btn btn-success">Submit</button>
                                        | @Html.ActionLink("Back to List", "Index")
                                    </div>
                                </div>
                                @Html.HiddenFor(model => model.CityId)
                            </form>
                            <br />
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
}
