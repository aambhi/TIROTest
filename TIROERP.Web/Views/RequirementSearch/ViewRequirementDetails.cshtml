@model TIROERP.Core.Model.RequirementSearchViewModel
@{
    ViewBag.Title = "ViewRequirementDetails";
    Layout = "~/Views/Shared/_Layout.cshtml";
    string house = string.Empty;
    string food = string.Empty;
    string medical = string.Empty;
    string travel = string.Empty;

    foreach (var allowance in Model.reqAllowance)
    {
        if (allowance.ALLOWANCE_TYPE == "HOUSE")
        {
            if (allowance.ALLOWANCE_NAME == "Allowance")
            {
                house = allowance.ALLOWANCE_NAME + " | Allowance: " + (allowance.ALLOWANCE_AMOUNT > 0 ? allowance.ALLOWANCE_AMOUNT : 0);
            }
            else
            {
                house = allowance.ALLOWANCE_NAME;
            }

        }
        else if (allowance.ALLOWANCE_TYPE == "FOOD")
        {
            if (allowance.ALLOWANCE_NAME == "Allowance")
            {
                food = allowance.ALLOWANCE_NAME + " | Allowance: " + (allowance.ALLOWANCE_AMOUNT > 0 ? allowance.ALLOWANCE_AMOUNT : 0);
            }
            else
            {
                food = allowance.ALLOWANCE_NAME;
            }
        }
        else if (allowance.ALLOWANCE_TYPE == "MEDICAL")
        {
            if (allowance.ALLOWANCE_NAME == "Allowance")
            {
                medical = allowance.ALLOWANCE_NAME + " | Allowance: " + (allowance.ALLOWANCE_AMOUNT > 0 ? allowance.ALLOWANCE_AMOUNT : 0);
            }
            else
            {
                medical = allowance.ALLOWANCE_NAME;
            }
        }
        else if (allowance.ALLOWANCE_TYPE == "TRAVEL")
        {
            if (allowance.ALLOWANCE_NAME == "Allowance")
            {
                travel = allowance.ALLOWANCE_NAME + " | Allowance: " + (allowance.ALLOWANCE_AMOUNT > 0 ? allowance.ALLOWANCE_AMOUNT : 0);
            }
            else
            {
                travel = allowance.ALLOWANCE_NAME;
            }
        }
    }
}


