@model TIROERP.Core.Model.Designation

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@Scripts.Render("~/bundles/chosen")
<link href="~/Content/css/chosen/chosen.css" rel="stylesheet" />

<script type="text/javascript">
    $(document).ready(function () {
        $("#INDUSTRY_ID").chosen();
    });
</script>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="right_col" role="main">
        <div class="">
            <div class="page-title">
                <div class="title_left">
                    <h3>Designation Master </h3>
                </div>
            </div>
            <div class="clearfix"></div>
            @Html.ValidationSummary(false, "", new { @class = "text-danger" })

            <div class="row">
                <div class="col-md-12 col-sm-12 col-xs-12">
                    <div class="x_panel">
                        <div class="x_title">
                            <h2>Add </h2>
                            <ul class="nav navbar-right panel_toolbox" style="min-width: 0px;">
                                <li><a class="collapse-link"><i class="fa fa-chevron-up"></i></a></li>
                            </ul>
                            <div class="clearfix"></div>
                        </div>
                        <div class="x_content">
                            <form class="form-inline">

                                <div class="col-md-10">
                                    <label for="middle-name" class="control-label col-md-3 col-sm-3">Designation Name<span class="required">*</span></label>
                                    <div class="col-md-6 col-sm-6">
                                        @Html.TextBoxFor(model => model.DESIGNATION_NAME, new { @id = "DesignationName", @class = "form-control  col-md-7 col-xs-12", @autocomplete = "off", @maxlength = "100" })
                                        @Html.ValidationMessageFor(model => model.DESIGNATION_NAME, "", new { @class = "text-danger" })
                                    </div>
                                </div>

                                <div class="col-md-10" style="margin-top:10px;">
                                    <label for="middle-name" class="control-label col-md-3 col-sm-3">Select Industry <span class="required">*</span></label>
                                    <div class="col-md-6 col-sm-6">
                                        @Html.DropDownListFor(model => model.INDUSTRY_ID, (SelectList)ViewData["IndustryList"], "", new { @id = "INDUSTRY_ID", @class = "form-control", @data_placeholder= "Select Industry" })
                                        @Html.ValidationMessageFor(model => model.INDUSTRY_ID, "", new { @class = "text-danger" })
                                    </div>
                                </div>

                                <div class="col-md-10" style="margin-top:10px;">
                                    <div class="col-md-6 col-sm-6 col-xs-12 col-md-offset-3">
                                        <button type="submit" class="btn btn-success">Submit</button>
                                        | @Html.ActionLink("Back to List", "Index")
                                    </div>
                                </div>
                            </form>
                            <br />
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
}


