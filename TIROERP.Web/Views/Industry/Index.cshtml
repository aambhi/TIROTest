@model IEnumerable<TIROERP.Core.Model.Industry>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<link href="~/Content/css/datatable/dataTables.bootstrap.css" rel="stylesheet" />
<script src="~/Content/js/datatable/jquery.dataTables.min.js"></script>


<script type="text/javascript">
    $(document).ready(function () {
        $('#common-grid').DataTable(
            {
                "order": [],
                "columnDefs": [{
                    "targets": 'no-sort',
                    "orderable": false,
                }]
            });
    });
</script>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="right_col" role="main">
        <div class="">
            <div class="page-title">
                <div class="title_left">
                    <h3>Industry Master</h3>
                </div>
            </div>
            <div class="clearfix"></div>

            <div class="row">
                <div class="col-md-12 col-sm-12 col-xs-12">
                    <div class="x_panel">
                        <div class="x_title">
                            <h2>@Html.ActionLink("Add Industry", "Create", new { }, new { @class = "btn btn-primary" })</h2>
                            <ul class="nav navbar-right panel_toolbox" style="min-width: 0px;">
                                <li><a href="#"><i class="fa fa-chevron-up"></i></a></li>
                            </ul>
                            <div class="clearfix"></div>
                        </div>

                        <div class="x_content">
                            @if (@ViewBag.SuccessMsg != null)
                            {
                                <div class="alert alert-success alert-dismissable" id="divPostErrorMsg">
                                    <button type="button" class="close" data-dismiss="alert"
                                            aria-hidden="true">
                                        &times;
                                    </button>
                                    Record Saved Successfully
                                </div>
                            }
                            <table id="common-grid" class="display table datable-grid table-striped table-bordered table-responsive jambo_table" cellspacing="0" width="100%">
                                <thead>
                                    <tr class="headings">
                                        <th>Industry</th>
                                        <th>Edit / Delete</th>
                                    </tr>
                                </thead>

                                <tbody>
                                    @foreach (var docDetail in Model)
                                    {
                                        <tr>
                                            <td>@Html.DisplayFor(modelItem => docDetail.INDUSTRY_TYPE)</td>
                                            <td>@Html.ActionLink("Edit", "Edit", new { id = docDetail.INDUSTRY_ID }, new { @class = "btn btn-info btn-xs" })  @Html.ActionLink("Delete", "Delete", new { id = docDetail.INDUSTRY_ID }, new { @class = "btn btn-danger btn-xs" })</td>
                                        </tr>
                                    }
                                </tbody>
                            </table>

                        </div>
                    </div>
                </div>
                <br />
                <br />
                <br />
            </div>
        </div>
    </div>
    <!-- /page content -->
}